<div class="mt-5">
  <div
    class="container border border-dark col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-10 col-offset-1">
    <form action="signup" method="POST" id="signUpForm">
      <input type="hidden" name="_csrf" value="{{ csrfToken }}">
      <p class="h4 mb-4 pt-4 text-center">Sign Up</p>

      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" class="form-control mb-2" placeholder="Username">
        {{#if signupMessage }}
        <label id="username-error" class="my-error-class" for="username">{{ signupMessage }}</label>
        {{/if}}
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="form-control mb-2" placeholder="Password">
      </div>

      <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control mb-2"
          placeholder="Confirm Password">
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="form-control mb-2" placeholder="Email">
      </div>

      <div class="form-group pb-4">
        <button class="btn btn-info btn-block mt-2" type="submit">Sign Up</button>
      </div>
  </div>
  </form>
</div>
</div>