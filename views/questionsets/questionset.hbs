<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="question-set-heading">Question sets</h1>
            <a class="btn btn-primary btn-lg fas fa-plus" id="btn-question-set" style="margin-top: 20px"
                href="/host/questionset/add"> Add</a>
            {{#each this.questionset}}
            <div class="list-group my-2 border border-primary rounded">
                <div class="list-group-item d-flex justify-content-between align-items-center mi-2">
                    {{#if questionset_image}}
                    <img src="/img/{{questionset_image}}" width="100px" height="100px" class="img-rounded">
                    {{else}}
                    <img src="/img/test.jpg" width="100px" height="100px" class="img-rounded">
                    {{/if}}
                    <h4 id="questionset_title">{{questionset_title}}</h4>
                    <span class="badge">
                        {{#if questionset_state }}
                        <a class="btn btn-success" href="/host/questionset/{{questionset_id}}/create_room"> <i class="fas fa-external-link-alt"></i> New Game </a>
                        {{else}}
                        <button class="btn btn-secondary disabled"> <i class="fas fa-external-link-alt"></i> New Game
                        </button>
                        {{/if}}
                        <a class="btn btn-info mx-4" href="/host/questionset/{{questionset_id}}/edit"><i
                                class="fas fa-edit"></i> Edit</a>
                    </span>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>