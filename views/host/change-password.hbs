{{#section 'js'}}
<script>
    setTimeout(function() {
        $("#alert").remove();
    }, 3000);
</script>
{{/section}}
<div class="row ml-4 mt-4">
  <p class="h5"><a href="/host/questionset">Home</a>> <a href="/host/edit-profile">Edit profile</a>> Change password</p>
</div>
<div class="mt-5">
  <form
    class="container border border-dark p-5 p-5 col-lg-3 col-lg-offset-4 col-md-8 col-md-offset-3 col-sm-8 col-sm-offset-2 col-10 col-offset-1"
    action="/host/change-password" method="POST" id="changePassForm">
    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
    <p class="h2 mb-4 text-center">Change password</p>

    <div class="form-group text-center" id="alert">
      {{#if error}}
      <div class="alert alert-danger" role="alert">
        {{error}}
      </div>
      {{/if}}
      {{#if success}}
      <div class="alert alert-success" role="alert">
        {{success}}
      </div>
      {{/if}}
    </div>


    <div class="form-group">
      <label for="current">Current password</label>
      <input type="password" id="current" name="current" class="form-control mb-2" placeholder="Current password">
    </div>

    <div class="form-group">
      <label for="new">New password</label>
      <input type="password" id="new" name="new" class="form-control mb-2" placeholder="New password">
    </div>

    <div class="form-group">
      <label for="confirm">Confirm password</label>
      <input type="password" id="confirm" name="confirm" class="form-control mb-2" placeholder="Confirm password">
    </div>

    <button class="btn btn-info" style="margin-left:35%" type="submit">Save change</button>

</div>
</form>
</div>